<!-- Views/Event/Index.cshtml -->
@model IEnumerable<EventApp.Models.Event>

@{
    ViewData["Title"] = "Events List";
}

<h1>Events</h1>

<a class="btn btn-primary" href="@Url.Action("AddEvent")">Add Event</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ev in Model)
        {
            <tr>
                <td>@ev.Title</td>
                <td>@ev.Description</td>
                <td>
                    @if (!string.IsNullOrEmpty(ev.ImagePath))
                    {
                        <img src="@ev.ImagePath" alt="Event Image" width="100" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>
                <td>
                    <a class="btn btn-info" href="@Url.Action("Details", new { id = ev.Id })">Details</a>
                    <a class="btn btn-warning" href="@Url.Action("Edit", new { id = ev.Id })">Edit</a>
                    <form asp-action="Delete" asp-route-id="@ev.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
