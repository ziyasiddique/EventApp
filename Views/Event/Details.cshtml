@model EventApp.ViewModels.EventDetailsViewModel

<h2>Event Details</h2>

<div>
    <h3>@Model.Event.Title</h3>
    <p>@Model.Event.Description</p>

    @if (Model.Event.ImagePath != null)
    {
        <div>
            <img src="@(Model.Event.ImagePath)" alt="Main Event Image" style="max-width: 300px;" />
        </div>
    }

    @if (Model.OptionalImages != null && Model.OptionalImages.Any())
    {
        <div>
            <h4>Optional Images</h4>
            @foreach (var image in Model.OptionalImages)
            {
                <img src="@(image.ImagePath)" alt="Optional Image" style="max-width: 200px;" />
            }
        </div>
    }
</div>
